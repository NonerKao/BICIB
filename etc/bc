#!/bin/bash

if [ $# != 1 && $# != 3 ]; then
	echo "usage: $0 source.b [-o <output>]"
	exit
elif [ $# == 3 && $2"y" == "-oy" ]; then
	OUT=$3
else
	OUT="a.out"
fi

/root/BICIB/brainfuck/compiler $1 > temp.s
as temp.s
ld -dynamic-linker /lib64/ld-linux-x86-64.so.2 -L/usr/lib/gcc/x86_64-unknown-linux-gnu/4.9.2/ -L/lib/ temp.o -lc -o $OUT
rm temp.s temp.o
